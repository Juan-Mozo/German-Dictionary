<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="?backgroundColor"
    android:layout_height="100dp">

    <ImageView
        android:id="@+id/settingsListIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/lar_margin"
        android:layout_marginTop="@dimen/sma_margin"
        android:layout_marginBottom="@dimen/sma_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:iconTint="?iconTint"
        app:srcCompat="@drawable/ic_dots_menu" />

    <TextView
        android:id="@+id/settingsListTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/lar_margin"
        android:layout_marginTop="@dimen/med_margin"
        android:fontFamily="@font/montserrat"
        android:text="Language"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="?attr/titleTextColor"
        android:textSize="@dimen/medium_text"
        app:layout_constraintStart_toEndOf="@+id/settingsListIcon"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/settingsListDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/lar_margin"
        android:layout_marginTop="@dimen/sma_margin"
        android:layout_marginEnd="@dimen/sma_margin"
        android:layout_marginBottom="@dimen/sma_margin"
        android:fontFamily="@font/montserrat"
        android:maxLines="3"
        android:text="Select the language that you want for the recipes"
        android:textSize="@dimen/small_text"
        android:textColor="?attr/subtitleTextColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/settingsListIcon"
        app:layout_constraintTop_toBottomOf="@+id/settingsListTitle" />

    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>