<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/drinksFragment">

    <fragment
        android:id="@+id/drinksFragment"
        android:name="com.juanimozo.drinkscocktails.drinks.DrinksFragment"
        tools:layout="@layout/fragment_drinks" >
        <action
            android:id="@+id/action_drinksFragment_to_recipeDetailsFragment"
            app:destination="@id/recipeDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/categoriesFragment"
        android:name="com.juanimozo.drinkscocktails.categories.CategoriesFragment"
        android:label="Categories"
        tools:layout="@layout/fragment_categories" />
    <fragment
        android:id="@+id/myDrinksFragment"
        android:name="com.juanimozo.drinkscocktails.profile.MyDrinksFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_my_drinks" />
    <fragment
        android:id="@+id/recipeDetailsFragment"
        android:name="com.juanimozo.drinkscocktails.drinks.details.RecipeDetailsFragment"
        tools:layout="@layout/fragment_recipe" >
        <argument
            android:name="name"
            app:argType="string" />
        <argument
            android:name="image"
            app:argType="integer" />
        <argument
            android:name="description"
            app:argType="string" />
        <argument
            android:name="ingredient"
            app:argType="string" />
        <argument
            android:name="instruction"
            app:argType="string" />
    </fragment>
</navigation>